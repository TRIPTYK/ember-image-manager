<div class="flex w-full">
    <div class="flex flex-col w-1/3 bg-red-300">
        <p class="py-3 text-center text-2xl font-bold">
        <h2>File Manager</h2>
        </p>
        <p class="text-center">
            <Ui::FileUpload @upload={{@upload}} />
        </p>
        <div>
            <ul>
                {{#each this.files.files as |element|}}
                    <Ui::FileList @item={{element}} />
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="flex flex-col w-2/3 bg-blue-300">
        <Ui::FileDetails />
    </div>

</div>